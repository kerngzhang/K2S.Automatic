<UserControl x:Class="K2S.Automatic.Controls.RaderChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:K2S.Automatic.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LayoutRoot">
        <Canvas x:Name="mainCanvas"/>
        <Canvas x:Name="sectionCanvas">
            <Polygon x:Name="p1" Stroke="#22ffffff" StrokeThickness="1"/>
            <Polygon x:Name="p2" Stroke="#22ffffff" StrokeThickness="1"/>
            <Polygon x:Name="p3" Stroke="#22ffffff" StrokeThickness="1"/>
            <Polygon x:Name="p4" Stroke="#22ffffff" StrokeThickness="1"/>
            <Polygon x:Name="p5" Stroke="Orange" StrokeThickness="1" Fill="#550091f0"/>
        </Canvas>
    </Grid>
</UserControl>
